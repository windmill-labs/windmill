		"stylelint-config-recommended": "^7.0.0",
		"svelte": "^3.42.6",
		"svelte-check": "^2.2.6",
		"svelte-highlight": "^6.0.1",
		"svelte-preprocess": "^4.9.8",
		"tailwindcss": "^3.0.11",
		"tslib": "^2.3.1",
		"typescript": "^4.7.2"
