{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "lib": [
      "es5",
      "es2015.promise",
      "es2015.collection",
      "es2015.iterable",
      "es2015.symbol.wellknown"
    ],
    "rootDir": "./src",
    "outDir": "./build"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**"]
}
